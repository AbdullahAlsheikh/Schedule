<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
	<StackLayout>
		<Label text="{{ title }}" class="title"/>
		<GridLayout columns="auto, auto" rows="auto, auto">
			<Label col="0" text="Class" class="namesOfSections"/>
			<Label col="1" text="Instructor" class="namesOfSections"/>
		</GridLayout>
		<ListView items="{{ items }}">
			<ListView.itemTemplate>
				<StackLayout orientation="horizontal">
					<Label text="{{ name }}" class="classInfo" row="0" col="0"/>
					<Label text="{{ prof }}" class="profInfo" row="0" col="2"/>
					<Button text="Remove Class" tap="removeFromCart"/>
				</StackLayout>
			</ListView.itemTemplate>
		</ListView>
	</StackLayout>
</Page>